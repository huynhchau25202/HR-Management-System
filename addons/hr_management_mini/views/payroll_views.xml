<odoo>
    <record id="view_payroll_form" model="ir.ui.view">
        <field name="name">hr.payroll.form</field>
        <field name="model">hr.payroll</field>
        <field name="arch" type="xml">
            <form string="Payroll">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="basic_salary"/>
                        <field name="bonuses"/>
                        <field name="total_salary" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
